<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper  PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
		  "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="org.tarena.cloudnote.dao.ShareDAO">
	
	<select id="findByNoteId" parameterType="string"
			resultType="org.tarena.cloudnote.entity.Share">
		SELECT * FROM cn_share
		WHERE cn_note_id=#{noteId}
	</select>
	
	<insert id="save" parameterType="org.tarena.cloudnote.entity.Share">
		INSERT INTO cn_share
		(cn_share_id,cn_share_title,cn_share_body,cn_note_id)
		VALUES
		(#{cn_share_id},#{cn_share_title},#{cn_share_body},#{cn_note_id})
	</insert>
	
	<select id="findByTitle" parameterType="string"
			resultType="org.tarena.cloudnote.entity.Share">
		SELECT * FROM cn_notebook
		WHERE name LIKE #{shareTitle}
	</select>
	
	<select id="findByShareId" parameterType="string"
			resultType="org.tarena.cloudnote.entity.Share">
		SELECT * FROM cn_share
		WHERE cn_share_id=#{shareId}
	</select>
	
</mapper>